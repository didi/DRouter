<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:enableOnBackInvokedCallback="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="tiramisu">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.didi.drouter.demo.activity.ActivityTest1" />
        <activity android:name="com.didi.drouter.demo.activity.ActivityTest2" />
        <activity android:name="com.didi.drouter.demo.activity.ActivityTest3" />
        <activity android:name="com.didi.drouter.demo.web.WebActivity" />
        <activity android:name=".activity.ActivityRemoteTest" />
        <activity
            android:name="com.didi.drouter.demo.activity.ActivityResultActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="com.intent.activity" />
                <category android:name="android.intent.category.DEFAULT" />

            </intent-filter>
        </activity>
        <activity
            android:name="com.didi.drouter.demo.web.SchemeActivity"
            android:exported="true">
            <intent-filter>
                <data android:scheme="didi" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.didi.drouter.demo.remote.DemoHostProvider"
            android:authorities="com.didi.drouter.remote.demo.host"
            android:exported="false"
            android:multiprocess="false" />
        <provider
            android:name="com.didi.drouter.demo.remote.DemoRemoteProvider"
            android:authorities="com.didi.drouter.remote.demo.remote"
            android:exported="false"
            android:multiprocess="false"
            android:process=":remote" />

        <activity
            android:name="com.didi.drouter.demo.remote.RemoteActivity"
            android:process=":remote" />
        <activity
            android:name="com.didi.drouter.demo.remote.RemoteMemoryActivity"
            android:process=":remote" />

        <service
            android:name="com.didi.drouter.demo.remote.RemoteService"
            android:process=":remote" />
        <service android:name=".activity.ActivityRemoteTest$MyService" />

        <activity android:name="com.didi.drouter.demo.handler.DynamicActivity" />
        <activity android:name="com.didi.drouter.demo.fragment.RouterPageViewPagerActivity" />
        <activity android:name="com.didi.drouter.demo.fragment.RouterPageSingleActivity" />
        <activity android:name="com.didi.drouter.demo.fragment.RouterPageStackActivity" />
    </application>

</manifest>